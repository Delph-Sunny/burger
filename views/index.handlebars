<div class="row">
    <div class="col-sm-6">
        <ul class="waiting-burger">
            {{#each burgers}}
            {{#unless devoured}}
            <div class="row py-2 bg-success">
                <div class="col-8">
                    {{id}}. {{burger_name}}
                </div>
                <div class="col-3">
                    <button class="btn btn-sm btn-info text-nowrap devour-btn" data-id="{{id}}"
                        data-status="{{devoured}}">Devour
                        it!</button>
                </div>
            </div>
            {{/unless}}
            {{/each}}
        </ul>
    </div>
    <div class="col-sm-6">
        <ul class="eaten-burger">
            {{#each burgers}}
            {{#if devoured}}
            <div class="row py-2 bg-success">
                <div class="col-12 bg-primary">
                    {{id}}. {{burger_name}}
                </div>
            </div>
            {{/if}}
            {{/each}}
        </ul>
    </div>
</div>
<div class="containerd-flex">
    <div class="row mb-2">
        <form class="add-burger text-center col-12 bg-primary">
            <div class="form-group">
                <label for="new-burger">Add A Burger</label>
                <input type="text" class="form-control" name="burger_name" id="new-burger"
                    placeholder="Enter a burger you want to eat here">
            </div>
            <button type="submit" class="btn btn-sm btn-secondary">Submit</button>
        </form>
    </div>
</div>